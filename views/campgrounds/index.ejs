<% include ../partials/header%>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp!</h1>
    <h5>View our hand-picked campgrounds from all over the world</h5>
    <p>
      <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campgrounds</a>
    </p>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function (campgrounds) { %>
    <div class="col-md-4 col-sm-6">
      <div class="img-thumbnail">
        <img class="img-fluid" src="<%= campgrounds.img %>" >
        <div class="caption">
          <h4> <%= campgrounds.name %></h4>
        </div>
        <p>
          <a href="/campgrounds/<%=campgrounds._id %>" class="btn btn-primary">More Info</a>
        </p>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer%>
